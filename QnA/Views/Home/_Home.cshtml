<div class="jumbotron">
    <h1>QnA</h1>
    <h3>Make your own FAQ</h3>
</div>
<div class="row wrapper">
    <div id="controllerDiv" class="col-md-6 ">
        <div id="borderWidth">
            <div class="row qnaDiv">
                <h4>Add new QnA</h4>
                <form class="form-horizontal" id="margBottom">
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="question">Question:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="question" data-bind="value: question" placeholder="Write your question here..." />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="answer">Answer:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="answer" data-bind="value: answer" placeholder="Write your answer here..." />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success margBottom" id="addButton" data-bind="click: addQna">Add</button>
                </form>
            </div>
            <div class="row margTop margBottom">
                <h4>Load XML File</h4>
                <div class="col-md-2 col-sm-2">
                    <input class="btn btn-primary btn-md" type="button" id="get_file" data-bind="click: getFile" value="Grab file" />
                    <input type="file" id="my_file" />
                </div>
                <div class="col-md-8 col-sm-8">
                    <input type="text" class="form-control" id="customfileupload" />
                </div>
                <div class="col-md-2 col-sm-2">
                    <input class="btn btn-success btn-md" type="button" id="uploadFile" data-bind="click: uploadFile" value="Load File" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h3>QnA Table</h3>
        <div class="row" id="tableDiv">
            <table id="qnaTable">
                <thead>
                    <tr>
                        <th>Questions</th>
                        <th>Answers</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: qna">
                    <tr>
                        <!--<td><input data-bind="value: question, click: $root.readonly, attr: { 'readonly': $root.getreadonlyState }" /></td>
                        <td><input data-bind="value: answer, click: $root.editInput" readonly/></td>-->
                        <td data-bind="text: question, click: function() { $root.changeTemplateQuestion($data) }, visible: showQuestion"></td>
                        <td data-bind="template: { name: 'questionTemplate', data: $data }, visible: showQuestionTemplate" ></td>
                        <td data-bind="text: answer, click: function() { $root.changeTemplateAnswer($data) }, visible: showAnswer"></td>
                        <td data-bind="template: { name: 'answerTemplate' }, visible: showAnswerTemplate"></td>
                        <td class="options"><button type="submit" class="btn btn-danger btn-sm" data-bind="click: $root.removeQna">Remove</button></td>
                        
                        
                        <!--<div data-bind="template: { name: 'friend-template', data: friend2 }"></div>-->


                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row margTop">
            <button type="submit" class="btn btn-success" id="saveXMLButton" data-bind="click: saveXML">Save as XML</button>
        </div>
        <h5 class="margTop" id="informationHeader" data-bind="text: informationHeader"></h5>
    </div>
</div>

<script type="text/html" id="questionTemplate">
    <div class="input-group">
        <input class="form-control" data-bind="value: question" />
        <div class="input-group-btn btn-group-vertical">
            @*<button type="button" class="btn btn-success btn-xs" data-bind="click: function() { $root.approveModify($data) }"><span class="glyphicon glyphicon-ok-circle"></span></button>*@
            <button type="button" class="btn btn-danger btn-xs" data-bind="click: function() { $root.cancelModifyQuestion($data) }"><span class="glyphicon glyphicon-circle-arrow-left"></span></button>
        </div>
    </div>
</script>
<script type="text/html" id="answerTemplate">
    <div class="input-group">
        <input class="form-control" data-bind="value: answer" />
        <div class="input-group-btn btn-group-vertical">
            @*<button type="button" class="btn btn-success btn-xs" data-bind="click: function() { $root.approveModify($data) }"><span class="glyphicon glyphicon-ok-circle"></span></button>*@
            <button type="button" class="btn btn-danger btn-xs" data-bind="click: function() { $root.cancelModifyAnswer($data) }"><span class="glyphicon glyphicon-circle-arrow-left"></span></button>
        </div>
    </div>
</script>